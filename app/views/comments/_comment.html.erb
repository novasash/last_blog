<%= content_tag :div, id: dom_id(comment), class: "border border-indigo-300 bg-indigo-50 rounded-lg p-6 mb-6" do %>
  <div class="card-body">
    <p class="card-text"><%= comment.content %></p>
    <p class="text-xs mt-1">
      Posted <%= time_ago_in_words comment.created_at %> ago | 
      Posted by <%= comment.session %>
      <% if session.id.to_s == comment.session %>
        <%= link_to "Delete", [post, comment], "data-turbo-method": :delete, class: "text-indigo-500" %>
      <% end %>
    </p>
  </div>
<% end %>
